    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cemetery</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CemeteryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CemeteryName)
            @Html.ValidationMessageFor(model => model.CemeteryName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street1)
            @Html.ValidationMessageFor(model => model.Street1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street2)
            @Html.ValidationMessageFor(model => model.Street2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GPSCoordinates)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GPSCoordinates)
            @Html.ValidationMessageFor(model => model.GPSCoordinates)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateEstablished)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateEstablished)
            @Html.ValidationMessageFor(model => model.DateEstablished)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LocationId, "Location")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LocationId", "Set Location...")
            @Html.ValidationMessageFor(model => model.LocationId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Admin")
</div>

@section Scripts {
