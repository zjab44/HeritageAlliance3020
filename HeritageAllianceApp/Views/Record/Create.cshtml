@model HeritageAllianceApp.Models.Record

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Record</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecordType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RecordType)
            @Html.ValidationMessageFor(model => model.RecordType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecordDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RecordDescription)
            @Html.ValidationMessageFor(model => model.RecordDescription)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateEntered)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateEntered)
            @Html.ValidationMessageFor(model => model.DateEntered)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EnteredBy)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EnteredBy)
            @Html.ValidationMessageFor(model => model.EnteredBy)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DeceasedId, "Deceased")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DeceasedId", String.Empty)
            @Html.ValidationMessageFor(model => model.DeceasedId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
